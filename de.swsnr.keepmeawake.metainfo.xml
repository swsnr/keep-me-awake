<?xml version='1.0' encoding='utf-8'?>
<component type="desktop-application">
    <id>de.swsnr.keepmeawake</id>
    <metadata_license>CC0-1.0</metadata_license>
    <name>Keep Me Awake</name>
    <summary>Keep your desktop awake</summary>
    <description>
        <p>Inhibit lock screen and suspend of your desktop system, via the main user interface or via global shortcuts.</p>
    </description>
    <categories>
        <category>Utility</category>
    </categories>
    <keywords>
        <keyword>Suspend</keyword>
        <keyword>Inhibit</keyword>
        <keyword>Idle</keyword>
    </keywords>
    <url type="homepage">https://codeberg.org/swsnr/keep-me-awake</url>
    <url type="bugtracker">https://codeberg.org/swsnr/keep-me-awake/issues</url>
    <url type="translate">https://translate.codeberg.org/engage/de-swsnr-keepmeawake/</url>
    <url type="contact">https://swsnr.de/</url>
    <url type="vcs-browser">https://codeberg.org/swsnr/keep-me-awake</url>
    <launchable type="desktop-id">de.swsnr.keepmeawake.desktop</launchable>
    <releases>
        <!-- Add release notes for the next release to a release with
        version 'next', date '9999-01-01' and URL 'https://codeberg.org/swsnr/keep-me-awake/releases/tag/next'.
        -->
        <release version="next" date="9999-01-01">
            <description>
                <p>Keep inhibiting screen lock even after the main window is closed.</p>
                <p>Global shortcuts are not yet supported.</p>
            </description>
            <url>https://codeberg.org/swsnr/keep-me-awake/releases/tag/next</url>
        </release>
        <release version="0.2.0" date="2025-06-01">
            <description>
                <p>Add persistent notification when sleep or screen lock are inhibited.</p>
                <p>Correctly quit the app.</p>
                <p>Global shortcuts are not yet supported.</p>
            </description>
            <issues>
                <issue url="https://codeberg.org/swsnr/keep-me-awake/issues/11">CB-11</issue>
                <issue url="https://codeberg.org/swsnr/keep-me-awake/issues/16">CB-16</issue>
            </issues>
            <url>https://codeberg.org/swsnr/keep-me-awake/releases/tag/v0.2.0</url>
        </release>
        <release version="0.1.0" date="2025-05-23">
            <description>
                <p>Add main window with toggles to inhibit either suspend, or suspend and screen lock.</p>
                <p>Global shortcuts and notifications are not yet supported.</p>
            </description>
            <url>https://codeberg.org/swsnr/keep-me-awake/releases/tag/v0.1.0</url>
        </release>
    </releases>
    <project_license>EUPL-1.2</project_license>
    <developer id="de.swsnr">
        <name translate="no">Sebastian Wiesner</name>
    </developer>
    <screenshots>
        <screenshot type="default">
            <image>https://codeberg.org/swsnr/keep-me-awake/raw/branch/main/screenshots/inhibit-nothing.png</image>
            <caption>Inhibit nothing</caption>
        </screenshot>
        <screenshot>
            <image>https://codeberg.org/swsnr/keep-me-awake/raw/branch/main/screenshots/inhibit-suspend-and-idle.png</image>
            <caption>Inhibit suspend and screen locking</caption>
        </screenshot>
    </screenshots>
    <translation type="gettext">de.swsnr.keepmeawake</translation>
    <content_rating type="oars-1.1" />
    <branding>
      <color type="primary" scheme_preference="light">#986a44</color>
      <color type="primary" scheme_preference="dark">#63452c</color>
    </branding>
    <requires>
        <display_length compare="ge">360</display_length>
    </requires>
    <recommends>
        <display_length compare="ge">400</display_length>
    </recommends>
    <supports>
        <control>keyboard</control>
        <control>pointing</control>
        <control>touch</control>
    </supports>
</component>
