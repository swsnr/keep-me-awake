{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "removeComments": false,
    "outDir": "build/js",
    "rootDir": "src",
    // Do not include any node_modules types in compilation for GNOME Shell code.
    // Any of these types is for the node.js environment, and as such likely
    // inappropriate for compilation in a gjs environment.
    "types": []
  },
  "include": ["src/**/*.ts"]
}
